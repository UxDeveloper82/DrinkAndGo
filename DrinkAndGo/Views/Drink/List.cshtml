
<div>
    <h2>All drinks are show here</h2>
</div>

<h2>@Model.CurrentCategory</h2>

@{ 
    foreach (var drink in Model.Drinks) 
    { 
       <div class="col-sm-4 col-lg-4 col-md-4">
           <div class="thumbnail">
               <img src="@drink.ImageThumbnailUrl" alt=""/>
               <h4>Drink Name: @drink.Name</h4>
               <p>Price: @drink.Price.ToString("c")</p>

           </div>
       </div>
    }

}